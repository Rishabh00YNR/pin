<%include ./partials/header.ejs%>
<div class="w-full min-h-screen bg-zinc-800 px-10 px-5 text-violet-200">
    <h1 class="text-xl">Create a new post</h1>
    <hr class="opacity-10 mt-3">
    <form action="/createPost" method="post" enctype="multipart/form-data">
        <input class="block w-1/3 px-3 py-2 rounded-lg" type="file" name="postimage">
        <input class="block w-1/3 px-3 py-2 mt-2 bg-violet-200 rounded-md text-violet-800" type="text" placeholder="Tittle" name="title">
        <textarea class="block h-30 w-1/3 px-3 py-2 mt-2 bg-violet-200 rounded-md text-violet-800" type="text" placeholder="Description" name="description"></textarea>
        <input class="block w-1/3 px-3 py-2 mt-2 bg-violet-900 rounded-md" type="submit" value="Create Post">
    </form>
</div>
<%include ./partials/footer.ejs%>
