<%include ./partials/header.ejs%>
<!-- background image -->
<div class=" w-full h-screen bg-center  bg-cover  bg-[url(https://images.unsplash.com/photo-1527698952067-61fc35796fcd?q=80&w=1032&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D)] flex items-center justify-center">
     <!-- blurry background -->
    <div class="backdrop-blur-sm h-screen w-full bg-black/30 flex items-center justify-center">
     <div class="w-[30rem] bg-white  px-[87px] py-10 rounded-[35px]">
         <!-- logo -->
        <div class="chat-notification-logo-wrapper mb-4 flex justify-center">
            <img class="pin-logo" src="https://i.pinimg.com/originals/d3/d1/75/d3d175e560ae133f1ed5cd4ec173751a.png" alt="pin logo">
        </div>
        <h1 class="text-3xl text-center text-zinc-700 font-semibold  text-transform: capitalize; tracking-tighter leading-none">Welcome To Pinterest</h1>
       <h3 class="mt-3 mb-3 text-sm text-center text-zinc-600">Find new ideas to try</h3>
       <form action="/register" method="post">
         <input class="border-2 rounded-md w-full px-3 mt-2 py-2"  type="text" name="username" placeholder="username">
         <input class="border-2 rounded-md w-full px-3 mt-2 py-2" type="email" name="email" placeholder="email">
         <input class="border-2 rounded-md w-full px-3 mt-2 py-2" type="password" name="password" placeholder="password">
         <input class="border-2  w-full px-3 mt-6 py-2 bg-red-600 text-white rounded-full" type="submit" value="Sign Up">
         <p class="text-xs mt-7 text-center w-full mx-auto font-semibold text-zinc-600">By continuing, you agree to Pinterest's Terms of Service and acknowledge you've read our Privacy Policy. Notice at collection.</p>
       </form>
       <p class="text-xs mt-7 w-2/3 mx-auto font-semibold text-zinc-600">Login to existing account <a class="text-red-600 " href="/">Login</a></p>
     </div>
    </div> 
   </div>
<%include ./partials/footer.ejs%>