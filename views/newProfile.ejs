<%include ./partials/header.ejs%>
 <div class="profile w-full text-white min-h-screen bg-zinc-800 pt-1">
    <form id="uploadForm" hidden action="/fileupload" method="post" enctype="multipart/form-data">
     <input type="file" name="image">
    </form>
    <div class="profileDetails flex flex-col items-center mt-20">
        <div class="relative">
            <span id="uploadIcon" class="h-8 w-8 flex rounded-full bg-zinc-200 absolute bottom-0 right-0 items-center justify-center ">
                <i class="text-zinc-800 ri-pencil-fill"></i>
            </span i>
            <div class="w-32 h-32 bg-zinc-200 rounded-full overflow-hidden">
                <img class="w-full h-full object-cover" src="/images/uploads/<%= user.profileImage%>" alt="">
            </div>
        </div>
        <h1 class="mt-5 font-semibold text-3xl">This is new profile</h1>
        <h3 class="text-md">@username</h3>
        <a href="/edit" class="mt-5 px-7 py-2 bg-zinc-700 rounded-full text-sm font-semibold" >Edit</a>
        <button class="px-7 py-2 mt-6 rounded-lg bg-violet-900 text-sm font-semibold text-violet-200">Add new Post</button>
    </div>
    <div class="cards flex flex-wrap gap-10 px-10 mt-10">
        <div class="card">
            <div class="w-52 h-40 bg-zinc-200 rounded-lg overflow-hidden">
                <img class="w-full h-full object-cover" src="https://i.pinimg.com/236x/f0/da/f2/f0daf20e133f41ba69e58fd5f24baf80.jpg" alt="">
            </div>
            <h3 class="text-xl font-medium mt-3">All Pins</h3>
            <h5 class="text-sm font-medium opacity-60">28 pins</h5>
        </div>
        <div class="card">
            <div class="w-52 h-40 bg-zinc-200 rounded-lg overflow-hidden">
                <img class="w-full h-full object-cover" src="https://i.pinimg.com/236x/58/14/4c/58144c0d8a9af3abc2d39fcfdcf42ded.jpg" alt="">
            </div>
            <h3 class="text-xl font-medium mt-3">All Pins</h3>
            <h5 class="text-sm font-medium opacity-60">28 pins</h5>
        </div>
    </div>
 </div>

 <script>
  document.querySelector('#uploadIcon').addEventListener("click", function(){
    document.querySelector('#uploadForm input').click()
  })
  document.querySelector('#uploadForm input').addEventListener("change", function(){
    document.querySelector('#uploadForm').submit()
  })
 </script>

<%include ./partials/footer.ejs%>